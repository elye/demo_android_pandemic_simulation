<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infected Individual" />

    <SeekBar
        android:id="@+id/seek_infected"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:min="1"
        android:max="255"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uninfected Individual" />

    <SeekBar
        android:id="@+id/seek_uninfected"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:min="1"
        android:max="255"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobility Distance" />

    <SeekBar
        android:id="@+id/seek_mobility_distance"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:min="1"
        android:max="20"/>

    <Button
        android:id="@+id/simulate_view_button"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_simulation"/>

</LinearLayout>
